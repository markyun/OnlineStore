@charset "UTF-8";
/*-------------------------------------------*\
  重置相关标签的样式
\*-------------------------------------------*/
html, body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  font-size: 16px;
  background-color: #EEE;
  font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif;
}

a:link, a:hover, a:active, a:visited {
  text-decoration: none;
  cursor: pointer;
  -webkit-tap-highlight-color: transparent;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
}

ul, ol, li {
  list-style-type: none;
}

.screen-wrapper {
  width: 100%;
  min-width: 998px;
  height: 100%;
}
.screen-wrapper .page-content {
  width: 100%;
  position: relative;
  left: 0;
  right: 0;
  text-align: center;
}

.step-prompt {
  width: 100%;
  font-size: 1.0rem;
  text-align: center;
  line-height: 1.2;
}
.step-info {
  color: #B0B9C0;
}
.step-detail {
  color: #FF6008;
  margin-left: 8px;
}

.page-header {
  width: 100%;
  height: 65px;
  color: #FFF;
  background-color: #333;
  display: table;
  table-layout: fixed;
}
.page-header > * {
  display: table-cell;
  vertical-align: middle;
}
.page-title {
  width: 16%;
  font-size: 1.8rem;
  font-weight: bold;
  text-align: right;
}
.page-nav {
  font-size: 1.2rem;
  color: #A9A9A9;
  padding-left: 45px;
}
.page-nav > * {
  display: inline-block;
  width: 25%;
}
@media screen and (min-width: 960px) {
  .page-nav > * {
    width: 15%;
  }
}
.page-nav > .active {
  color: #FFF;
}
.page-notify {
  width: 12%;
  font-size: 0.9rem;
  text-align: center;
}

.cabin {
  display: inline-block;
  width: 260px;
  height: 350px;
  background-color: #FFF;
}
.cabin.active {
  background-color: #FF6008;
}
.cabin.active * {
  color: #FFF;
}
.cabin-poster {
  display: block;
  width: 175px;
  height: 175px;
  margin: 42.5px;
  border-radius: 50%;
}
.cabin-intro {
  width: 100%;
  font-size: 0.9rem;
  color: #FF6008;
  text-align: center;
}
.cabin-info {
  width: 100%;
  font-size: 1.7rem;
  line-height: 2;
  color: #000;
  text-align: center;
}
.cabin-info .sub-title {
  font-size: 1.0rem;
  color: #999;
}

.text-cabin {
  display: inline-block;
  width: 200px;
  height: 270px;
  background-color: #FFF;
  border: 1px solid transparent;
}
.text-cabin.active {
  border: 1px solid #FF6008;
}
.text-cabin.active .cabin-header {
  color: #FFF;
  background-color: #FF6008;
}
.cabin-header {
  width: 100%;
  height: 50px;
  line-height: 50px;
  font-size: 1.15rem;
  font-weight: bold;
  text-align: center;
  color: #1F1F1F;
  background-color: #DDD;
}
.cabin-content {
  margin: 12px 16px;
  font-size: 1.05rem;
  line-height: 1.3;
  text-align: left;
  color: #B0B9C0;
}
.cabin-content .highlight {
  color: #FF6008;
  text-align: center;
  font-size: 2.2rem;
  line-height: 1.4;
}

/*-------------------------------------------*\
  步骤按钮(prev save next)的样式
\*-------------------------------------------*/
.step-btn {
  display: inline-block;
  width: 150px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 1.5rem;
  color: #FF6008;
  background-color: #FFF;
  border: 1px solid #FF6008;
  border-radius: 40px;
}
.step-btn + .step-btn {
  margin-left: 36px;
}
.step-btn.disabled {
  color: #B0B9C0;
  border: 1px solid #B0B9C0;
}
.step-btn.active {
  color: #FFF;
  background-color: #FF6008;
}
.page-content {
  padding-top: 32px;
}
.step-title {
  width: 100%;
  font-size: 1.9rem;
  color: #000;
  text-align: center;
  line-height: 1.5;
}
.cabin-section {
  margin-top: 36px;
}
.text-cabin {
  height: 200px;
}
.btn-section {
  margin: 60px auto 0;
}

.group-section {
  margin-top: 36px;
}
.group-box {
  display: inline-block;
  width: 135px;
  height: 135px;
  border: 1px solid #DDD;
  border-radius: 50%;
  background-color: #FFF;
  overflow: hidden;
}
.group-box + .group-box {
  margin-left: 68px;
}
.group-box.active {
  border: 1px solid #FF6008;
}
.group-box.active .group-title {
  color: #FFF;
  background-color: #FF6008;
}
.group-box.active .group-input {
  color: #FF6008;
}
.group-box.empty {
  width: 132px;
  height: 132px;
  border: 4px dashed #BBB;
  background-clip: content-box;
  color: #999;
  font-size: 1.2rem;
  line-height: 135px;
  text-align: center;
}
.group-title {
  padding-top: 8px;
  height: 40px;
  line-height: 40px;
  color: #333;
  background-color: #C3C3C3;
  text-align: center;
}
.group-content {
  padding-top: 1px;
  text-align: center;
}
.group-input {
  display: block;
  margin: 0 auto;
  padding: 6px 0;
  border: none;
  outline: none;
  text-align: center;
  color: #333;
  border-bottom: 1px solid #DDD;
  width: 50%;
  height: 50px;
  font-size: 2.6rem;
  line-height: 1.5;
}
.group-image {
  display: inline-block;
  width: 135px;
  height: 135px;
}
